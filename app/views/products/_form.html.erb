<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :required=>true %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price , :required=>true%>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description , :required=>true%>
  </div>

<div class="form-group ">
<%= f.label :photos %><br>
<%= f.file_field :photos, multiple: true %><br>

 <%= f.check_box :remove_photos %>
    Remove Photos<br>
</div>

 <%= f.select(:role, Product.roles.keys.map {|role| [role.titleize,role]}) %>

 <%= link_to 'Delete Listing', product, method: :delete, data: {confirm: 'Are you sure?' } %></button>
  <div class="actions">
  
    <%= f.submit %>
    
  </div>
<% end %>
